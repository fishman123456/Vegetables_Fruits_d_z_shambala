<Window x:Class="Vegetables_Fruits_d_z_shambala.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vegetables_Fruits_d_z_shambala"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <!-- действия, выполняемые в прогармме-->
            <StackPanel Orientation="Horizontal">
                <Label Content="Actions: "  Margin="10"/>
                <Button x:Name="fillBtn" Content="Fill" Width="100" Margin="10" Click="fillBtn_Click"/>
                <Button x:Name="updateBtn" Content="Update" Width="100" Margin="10" Click="updateBtn_Click"/>
            </StackPanel>
            <!-- выводим результаты из базы данных фрукты овощи -->
            <DataGrid ItemsSource="{Binding Source=MyList}"  AutoGenerateColumns="False" Width="800">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id_g}"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name_g}" Width="100"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type_g}" Width="100"/>
                    <DataGridTextColumn Header="Color" Binding="{Binding Color_g}" Width="100"/>
                    <DataGridTextColumn Header="Calories" Binding="{Binding Calories_g}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
